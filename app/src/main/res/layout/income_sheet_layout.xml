<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/income_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="월급"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/income_button2"
        />

    <Button
        android:id="@+id/income_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="용돈"
        app:layout_constraintStart_toEndOf="@+id/income_button1"
        app:layout_constraintEnd_toStartOf="@+id/income_button3"/>

    <Button
        android:id="@+id/income_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="상여"
        app:layout_constraintStart_toEndOf="@+id/income_button2"
        app:layout_constraintEnd_toStartOf="@+id/income_button4"
         />

    <Button
        android:id="@+id/income_button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="금용소득"
        app:layout_constraintStart_toEndOf="@+id/income_button3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/income_button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기타"
        app:layout_constraintStart_toStartOf="@+id/income_button1"
        app:layout_constraintEnd_toEndOf="@+id/income_button1"
        app:layout_constraintTop_toBottomOf="@+id/income_button1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>