<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/debt_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="카드빚"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/debt_button2"/>

    <Button
        android:id="@+id/debt_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="대출비"
        app:layout_constraintStart_toEndOf="@+id/debt_button1"
        app:layout_constraintEnd_toStartOf="@+id/debt_button3"/>

    <Button
        android:id="@+id/debt_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="빌린돈"
        app:layout_constraintStart_toEndOf="@+id/debt_button2"
        app:layout_constraintEnd_toStartOf="@+id/debt_button4"/>

    <Button
        android:id="@+id/debt_button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기타"
        app:layout_constraintStart_toEndOf="@+id/debt_button3"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>