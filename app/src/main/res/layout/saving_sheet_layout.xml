<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/saving_button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="예금"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saving_button2" />

    <Button
        android:id="@+id/saving_button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="적금"
        app:layout_constraintStart_toEndOf="@id/saving_button1"
        app:layout_constraintEnd_toStartOf="@+id/saving_button3" />

    <Button
        android:id="@+id/saving_button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="주택청약"
        app:layout_constraintStart_toEndOf="@+id/saving_button2"
        app:layout_constraintEnd_toStartOf="@+id/saving_button4" />

    <Button
        android:id="@+id/saving_button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기타"
        app:layout_constraintStart_toEndOf="@+id/saving_button3"
        app:layout_constraintEnd_toEndOf="parent "/>
</androidx.constraintlayout.widget.ConstraintLayout>