<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="90dp"
        android:layout_height="467dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editTextTextPersonName10"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="입력 종류" />

        <EditText
            android:id="@+id/editTextTextPersonName11"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="날짜" />

        <EditText
            android:id="@+id/editTextTextPersonName40"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="분류" />

        <EditText
            android:id="@+id/editTextTextPersonName41"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:layout_marginBottom="30px"
            android:inputType="textPersonName"
            android:text="금액" />

        <EditText
            android:id="@+id/editTextTextPersonName42"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="내용" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="292dp"
        android:layout_height="467dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#807373"
            android:text="당시 선택했던 분류"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#807373"
            android:text="저장 당시 날짜"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#807373"
            android:text="수입 / 지출 / 저축 선택"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/amount2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:digits="0123456789"
            android:inputType="number"
            android:text="저장되어 있던 금액" />

        <EditText
            android:id="@+id/editTextTextPersonName9"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="저장되어있던 내용" />

    </LinearLayout>

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="취소"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:layout_editor_absoluteX="236dp" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="수정"
        app:layout_constraintEnd_toStartOf="@+id/button14"
        tools:layout_editor_absoluteY="535dp" />

</androidx.constraintlayout.widget.ConstraintLayout>